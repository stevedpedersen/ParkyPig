<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <TextView  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texting"/>

    <Button android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Nearby Parking"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/pink_button"
        style="@style/button_text"
        />
    <Button	  android:id="@+id/park"
        android:text="Park"
        android:layout_alignParentBottom="true"
        android:layout_x="150dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:background="@drawable/pink_button"
        style="@style/button_text"
        />
    <Button	  android:id="@+id/pastParking"
        android:background="@drawable/pink_button"
        style="@style/button_text"
        android:text="History"
        android:layout_x="150dp"
        android:layout_alignParentBottom="true"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/park"
        android:layout_toEndOf="@+id/park"
        android:layout_alignBottom="@+id/park"
        />


</RelativeLayout>